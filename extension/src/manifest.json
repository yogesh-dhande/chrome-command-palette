{
  "name": "Single Dispatch Command Palette",
  "version": "0.4.0",
  "manifest_version": 3,
  "description": "Command palette for any website. Manage tabs and bookmarks, open links, or trigger button clicks just with your keyboard.",
  "action": {
    "default_title": "Single Dispatch - The Command Palette for Chrome",
    "default_popup": "./src/popup/index.html"
  },
  "icons": {
    "16": "src/assets/16x16.png",
    "48": "src/assets/48x48.png",
    "128": "src/assets/128x128.png"
  },
  "background": {
    "service_worker": "./src/service_worker.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/assets/128x128.png"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
    "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content-scripts/main.js"]
    }
  ],
  "commands": {
    "activate_extension": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Launch the command palette"
    }
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*",
      "https://singledispatch.web.app/*",
      "https://singledispatch.com/*",
      "https://www.singledispatch.com/*"
    ]
  },
  "permissions": ["tabs", "search", "bookmarks", "storage"]
}
