{
  "*": [
    {
      "type": "element",
      "element": {
        "scope": {
          "selector": "a"
        },
        "label": {
          "template": "{innerText}"
        },
        "trigger": {
          "type": "open"
        }
      }
    },
    {
      "type": "element",
      "element": {
        "scope": {
          "selector": "button"
        },
        "label": {
          "template": "button"
        },
        "trigger": {
          "type": "click"
        }
      }
    },
    {
      "type": "element",
      "element": {
        "scope": {
          "selector": "input"
        },
        "label": {
          "template": "input"
        },
        "trigger": {
          "type": "focus"
        }
      }
    },
    {
      "type": "element",
      "element": {
        "scope": {
          "selector": "textarea"
        },
        "label": {
          "template": "input"
        },
        "trigger": {
          "type": "focus"
        }
      }
    },
    {
      "type": "element",
      "element": {
        "scope": {
          "selector": "[role=\"link\"]"
        },
        "label": {
          "template": "{innerText}"
        },
        "trigger": {
          "type": "open"
        }
      }
    },
    {
      "type": "element",
      "element": {
        "scope": {
          "selector": "[role=\"button\"]"
        },
        "label": {
          "template": "button"
        },
        "trigger": {
          "type": "click"
        }
      }
    }
  ],
  "github.com": [
    {
      "type": "element",
      "element": {
        "scope": {
          "selector": "[data-hydro-click]"
        },
        "label": {
          "template": "button"
        },
        "trigger": {
          "type": "click"
        }
      }
    },
    {
      "type": "link",
      "link": {
        "url": "/pulls/assigned",
        "label": "Pull Requests: Assigned"
      }
    },
    {
      "type": "link",
      "link": {
        "url": "/pulls/mentioned",
        "label": "Pull Requests: Mentioned"
      }
    },
    {
      "type": "link",
      "link": {
        "url": "/pulls/review-requested",
        "label": "Pull Requests: Review Requests"
      }
    },
    {
      "type": "link",
      "link": {
        "url": "/issues/assigned",
        "label": "Issues: Assigned"
      }
    },
    {
      "type": "link",
      "link": {
        "url": "/issues/mentioned",
        "label": "Issues: Mentioned"
      }
    }
  ],
  "mail.google.com": [
    {
      "type": "element",
      "element": {
        "scope": {
          "selector": "[role=\"row\"]"
        },
        "label": {
          "selector": "[role=\"link\"]",
          "template": "{innerText}"
        },
        "trigger": {
          "selector": "[role=\"link\"]",
          "type": "open"
        },
        "options": [
          {
            "type": "element",
            "element": {
              "label": {
                "template": "Archive"
              },
              "trigger": {
                "selector": "[data-tooltip=\"Archive\"]",
                "type": "click"
              }
            }
          },
          {
            "type": "element",
            "element": {
              "label": {
                "template": "Delete"
              },
              "trigger": {
                "selector": "[data-tooltip=\"Delete\"]",
                "type": "click"
              }
            }
          },
          {
            "type": "element",
            "element": {
              "label": {
                "template": "Mark Unread"
              },
              "trigger": {
                "selector": "[data-tooltip=\"Mark as unread\"]",
                "type": "click"
              }
            }
          },
          {
            "type": "element",
            "element": {
              "label": {
                "template": "Mark Read"
              },
              "trigger": {
                "selector": "[data-tooltip=\"Mark as read\"]",
                "type": "click"
              }
            }
          },
          {
            "type": "element",
            "element": {
              "label": {
                "template": "Snooze"
              },
              "trigger": {
                "selector": "[data-tooltip=\"Snooze\"]",
                "type": "click"
              }
            }
          },
          {
            "type": "element",
            "element": {
              "label": {
                "template": "Star"
              },
              "trigger": {
                "selector": "[role=\"button\"]",
                "type": "click"
              }
            }
          },
          {
            "type": "element",
            "element": {
              "label": {
                "template": "Select"
              },
              "trigger": {
                "selector": "[role=\"checkbox\"]",
                "type": "click"
              }
            }
          }
        ]
      }
    },
    {
      "type": "element",
      "element": {
        "scope": {
          "selector": ".aeH [role=\"button\"]"
        },
        "label": {
          "template": "button"
        },
        "trigger": {
          "type": "simulatedClick"
        }
      }
    }
  ]
}
