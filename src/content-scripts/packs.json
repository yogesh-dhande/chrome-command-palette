{
  "*": [
    {
      "name": "links",
      "scope": {
        "selector": "a"
      },
      "label": {
        "template": "{innerText}"
      },
      "trigger": {
        "type": "open"
      }
    },
    {
      "name": "buttons",
      "scope": {
        "selector": "button"
      },
      "label": {
        "template": "button"
      },
      "trigger": {
        "type": "click"
      }
    },
    {
      "name": "inputs",
      "scope": {
        "selector": "input"
      },
      "label": {
        "template": "input"
      },
      "trigger": {
        "type": "focus"
      }
    },
    {
      "name": "textareas",
      "scope": {
        "selector": "textarea"
      },
      "label": {
        "template": "input"
      },
      "trigger": {
        "type": "focus"
      }
    },
    {
      "name": "role-links",
      "scope": {
        "selector": "[role=\"link\"]"
      },
      "label": {
        "template": "{innerText}"
      },
      "trigger": {
        "type": "open"
      }
    },
    {
      "name": "role-buttons",
      "scope": {
        "selector": "[role=\"button\"]"
      },
      "label": {
        "template": "button"
      },
      "trigger": {
        "type": "click"
      }
    }
  ],
  "github.com": [
    {
      "name": "hydro-click",
      "scope": {
        "selector": "[data-hydro-click]"
      },
      "label": {
        "selector": null,
        "template": "button"
      },
      "trigger": {
        "selector": null,
        "type": "click"
      }
    },
    {
      "trigger": {
        "url": "/pulls/assigned"
      },
      "label": {
        "template": "Pull Requests: Assigned"
      }
    },
    {
      "trigger": {
        "url": "/pulls/mentioned"
      },
      "label": {
        "template": "Pull Requests: Mentioned"
      }
    },
    {
      "trigger": {
        "url": "/pulls/review-requested"
      },
      "label": {
        "template": "Pull Requests: Review Requests"
      }
    },
    {
      "trigger": {
        "url": "/issues/assigned"
      },
      "label": {
        "template": "Issues: Assigned"
      }
    },
    {
      "trigger": {
        "url": "/issues/mentioned"
      },
      "label": {
        "template": "Issues: Mentioned"
      }
    }
  ],
  "mail.google.com": [
    {
      "name": "email-archive",
      "scope": {
        "selector": "[role=\"row\"]"
      },
      "label": {
        "selector": "[role=\"link\"]",
        "template": "Archive - {innerText}"
      },
      "trigger": {
        "selector": "[data-tooltip=\"Archive\"]",
        "type": "click"
      }
    },
    {
      "name": "email-delete",
      "scope": {
        "selector": "[role=\"row\"]"
      },
      "label": {
        "selector": "[role=\"link\"]",
        "template": "Delete - {innerText}"
      },
      "trigger": {
        "selector": "[data-tooltip=\"Delete\"]",
        "type": "click"
      }
    },
    {
      "name": "email-mark-unread",
      "scope": {
        "selector": "[role=\"row\"]"
      },
      "label": {
        "selector": "[role=\"link\"]",
        "template": "Mark Unread - {innerText}"
      },
      "trigger": {
        "selector": "[data-tooltip=\"Mark as unread\"]",
        "type": "click"
      }
    },
    {
      "name": "email-snooze",
      "scope": {
        "selector": "[role=\"row\"]"
      },
      "label": {
        "selector": "[role=\"link\"]",
        "template": "Snooze - {innerText}"
      },
      "trigger": {
        "selector": "[data-tooltip=\"Snooze\"]",
        "type": "click"
      }
    },
    {
      "name": "email-star",
      "scope": {
        "selector": "[role=\"row\"]"
      },
      "label": {
        "selector": "[role=\"link\"]",
        "template": "Star - {innerText}"
      },
      "trigger": {
        "selector": "[role=\"button\"]",
        "type": "click"
      }
    },
    {
      "name": "email-select",
      "scope": {
        "selector": "[role=\"row\"]"
      },
      "label": {
        "selector": "[role=\"link\"]",
        "template": "Select - {innerText}"
      },
      "trigger": {
        "selector": "[role=\"checkbox\"]",
        "type": "click"
      }
    }
  ]
}
